@model List<AcademyOnline.Entities.Categoria>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner">

</div>
<h3 class="h3">Categorias</h3>

<div class="box">


</div>

<section>
    <div class="row">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 border-primary" style="max-width: 20rem">
                        <img class="card-img-top" src="~/Areas/Images/Categories/@item.ImagePath" asp-append-version="true" width="150px" height="150px">
                        <div class="card-body">
                            <h3 class="card-title">@item.Nombre</h3>
                            <p class="card-text"></p>
                            @Html.ActionLink("Ver", "Cursos", new { id = @item.CategoriaId }, new { @class = "btn btn-primary btn-active" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>