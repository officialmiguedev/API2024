@model List<AcademyOnline.Entities.Categoria>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index categoria</h2>

<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="~/Admin/Categoria/Create" class="btn btn-primary">Nuevo</a>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoriaId</td>
                                <td>@item.Nombre</td>
                                <td>
                                    <a href="~/Admin/Categoria/Edit/@item.CategoriaId" class="btn btn-success">Editar</a>
                                    <a href="~/Admin/Categoria/Delete/@item.CategoriaId" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>