@model List<AcademyOnline.Entities.Estudiante>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3>Estudiante</h3>

<a href="/Estudiante/Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>New</a>
<table class="table table-striped table-dark">
    <thead class="thead-dark">
    <th>ID</th>
    <th>Name</th>
    <th>Options</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EstudianteId</td>
                <td>@item.Nombre</td>
                <td>
                    <a href="/Estudiante/Details/@item.EstudianteId" class="btn btn-success btn-block"><i class="fa-solid fa-list"></i></a>
                    <a href="/Estudiante/Edit/@item.EstudianteId" class="btn btn-primary btn-block"><i class="fa-solid fa-edit"></i></a>
                    <a href="/Estudiante/Delete/@item.EstudianteId" class="btn btn-danger btn-block"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>