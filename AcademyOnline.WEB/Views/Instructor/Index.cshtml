@model List<AcademyOnline.Entities.Instructor>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3>Instructor</h3>

<a href="/Instructor/Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>New</a>
<table class="table table-striped table-dark">
    <thead class="thead-dark">
        <th>ID</th>
        <th>Name</th>
        <th>Image</th>
        <th>Options</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.InstructorId</td>
                <td>@item.Nombres</td>
                <td>
                    <img src="~/Images/Instructor/@item.ImagePath" height="150px" />
                </td>
                <td>
                    <a href="/Instructor/Details/@item.InstructorId" class="btn btn-success btn-block"><i class="fa-solid fa-list"></i></a>
                    <a href="/Instructor/Edit/@item.InstructorId" class="btn btn-primary btn-block"><i class="fa-solid fa-edit"></i></a>
                    <a href="/Instructor/Delete/@item.InstructorId" class="btn btn-danger btn-block"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>