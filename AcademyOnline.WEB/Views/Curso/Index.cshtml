@model List<AcademyOnline.Entities.Curso>
@{
    ViewBag.Title = "Index";
}


<h3>Cursos</h3>

<a href="/Curso/Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>New</a>
<table class="table table-striped table-dark">
    <thead class="thead-dark">
    <th>ID</th>
    <th>Name</th>
    <th>Image</th>
    <th>Options</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CursoId</td>
                <td>@item.Nombre</td>
                <td>
                    <img src="~/Images/Cursos/@item.ImagePath" height="150px" />
                </td>
                <td>
                    <a href="/Curso/Details/@item.CursoId" class="btn btn-success btn-block"><i class="fa-solid fa-list"></i></a>
                    <a href="/Curso/Edit/@item.CursoId" class="btn btn-primary btn-block"><i class="fa-solid fa-edit"></i></a>
                    <a href="/Curso/Delete/@item.CursoId" class="btn btn-danger btn-block"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>