@model AcademyOnline.Entities.Categoria
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Category</h2>

<div class="row">
    <div class="col-6">
        <div class="boxform-align">
            <img src="~/Images/Categories/@Model.ImagePath" width="25%" class="form-group" />
        </div>
        <div class="boxform-align">
            <form action="/Categoria/Edit" method="post">
                <h3>ID: @Model.CategoriaId</h3>

                <div class="form-group">
                    <input type="text" name="Nombre" class="form-control" value="@Model.Nombre" />
                </div>
                <div>
                    <input type="hidden" name="CategoriaId" value="@Model.CategoriaId" />
                </div>
                <div class="form-group">
                    <input type="submit" name="" value="Save" class="btn btn-primary" />
                    <a href="/Categoria/Index" class="btn btn-primary"><i class="fa-solid fa-reply"></i></a>
                </div>
            </form>
        </div>
    </div>
</div>