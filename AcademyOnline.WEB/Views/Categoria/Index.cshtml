@model List<AcademyOnline.Entities.Categoria>
@{
    ViewBag.Title = "Index";
}

<h3>Categorias</h3>

<a href="/Categoria/Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>New</a>
<table class="table table-striped table-dark">
    <thead class="thead-dark">
    <th>ID</th>
    <th>Name</th>
    <th>Image</th>
    <th>Options</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoriaId</td>
                <td>@item.Nombre</td>
                <td>
                    <img src="~/Images/Categories/@item.ImagePath" height="150px" />
                </td>
                <td>
                    <a href="/Cateoria/Details/@item.CategoriaId" class="btn btn-success btn-block"><i class="fa-solid fa-list"></i></a>
                    <a href="/Categoria/Edit/@item.CategoriaId" class="btn btn-primary btn-block"><i class="fa-solid fa-edit"></i></a>
                    <a href="/Categoria/Delete/@item.CategoriaId" class="btn btn-danger btn-block"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
